        <xpath expr="//div[hasclass('div_l10n_mx_edi_colony')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('div_l10n_mx_edi_locality')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('div_city')]" position="attributes">
