<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="autoinvoice_address_extend_simplify" inherit_id="q_l10n_mx_autoinvoice.address">

        <xpath expr="//form" position="before">
            <div class="alert alert-info" role="alert" style="font-size: 1.1em;">
                <i class="fa fa-info-circle mr-2"/>
                <strong>Aviso:</strong> Asegúrese que los datos proporcionados son los mismos que están en su constancia de situación fiscal actualizada.
            </div>
        </xpath>


        <xpath expr="//div[hasclass('div_email')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('div_phone')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('div_street_name')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('div_street_number')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('div_l10n_mx_edi_colony')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('div_l10n_mx_edi_locality')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('div_city')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('div_country')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
        <xpath expr="//div[hasclass('div_state')]" position="attributes">
            <attribute name="class" add="d-none" separator=" "/>
        </xpath>
    </template>

</odoo>